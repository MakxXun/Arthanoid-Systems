from DataX import *

#Library is in DataX, so DataX is really crucial for this AI

class AI:
    def __init__(self, library):
        self.library = library

    def respond_to_input(self, user_input):
        words = user_input.split()
        response = []
        for word in words:
            if word in self.library.responses:
                response.append(random.choice(self.library.responses[word]))
        if response:
        return ' '.join(response)
        for i in nsfwwords:#checking for NSFW words
            if i in user_input:
                return "Sorry, I give a proper answer on this question or statement due to sensitive words."
        for z in other_words:
            if z in user_input:
                return self.library.get_response("bye")
        elif "why" in user_input and "created" in user_input:#this is predefined knowledge part 2
            return self.library.get_response("about")
        elif "why" in user_input and "made" in user_input:
            return self.library.get_response("about")
        elif "sup" in user_input:
            return self.library.get_response("hi")
        elif "cya" in user_input:
            return self.library.get_response("bye")
        elif "gtg" in user_input:
            return self.library.get_response("bye")#up till this point is positive starting on chat filter from now on
        else:
            return "Sorry, I'm still learning what that means or how to do that"
        
# Example usage:
if __name__ == "__main__":
    library = Library()
    ai = AI(library)
    while True:
        user_input = input("User: ").strip().lower()
        if user_input == "exit":
            print("Goodbye!")
            break
        else:
            print("\n")
            print(ai.respond_to_input(user_input))
            print("\n")
